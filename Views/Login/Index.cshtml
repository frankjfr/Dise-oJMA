<!DOCTYPE html>
<html lang="es">
@{
    Layout = null;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - JMA Laboratorios</title>
    @* <link rel="stylesheet" href="styles.css"> *@
    <link rel="stylesheet" href="~/css/Login2.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="form-header">
                <div class="logo-container">
                    <img class="logo" src="/img/imgLogin/jmaLogo.png">
                </div>
            </div>
            <h2>Iniciar Sesión</h2>
            <form asp-action="Index" method="post">
                <div class="input-group">
                    <label for="email">Correo Electrónico</label>
                    <input  placeholder="Ingresa tu correo" required asp-for="Usuario" id="username">
                </div>
                <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input type="password" placeholder="Ingresa tu contraseña" required asp-for="Clave" id="password">
                </div>
                <div class="input-group">
                    <label for="company">Selecciona tu empresa</label>
                    <select  required asp-for="EmpresaId" id="empresa">
                        <option value="" disabled selected>Seleccione una empresa</option>
                        <option value="jma_lab">JMA Laboratorios</option>
                        <option value="pascal_lab">Pascal Labs</option>
                        <option value="bio_lab">BioAnálisis</option>
                    </select>
                </div>
                <button type="submit" class="btn">Ingresar</button>
                <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
            </form>
        </div>
    </div>
</body>
</html>
