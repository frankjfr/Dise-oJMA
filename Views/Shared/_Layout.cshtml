<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="style.css">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />
    <!-- Agregar Bootstrap JS y CSS en _Layout.cshtml -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>


   
</head>
<body>
    <!-- Header fijo -->
    <header class="header-bar">
        <div class="logo">
            <span class="title">JMA LABS</span>
        </div>
        <div class="user-info">
            @if (!string.IsNullOrEmpty(Context.Session.GetString("Usuario")))
            {
                <img src="/img/imgLogin/jmaLogo.png" alt="Logo">

                <span class="welcome-user">Bienvenido, @Context.Session.GetString("Usuario")</span>
                <a asp-controller="Login" asp-action="Logout" class="logout"> <i class='bx bx-log-out'></i></a>
            }
            else
            {
                <a asp-controller="Login" asp-action="Index" class="logout">Iniciar Sesión</a>
            }
        </div>
    </header>


    <div class="sidebar close">
        <div class="logo-details">
            <div class="home-content">
                <i class='bx bx-menu'></i>
            </div>
            <span class="logo_name">Menu JMA</span>
        </div>
        <ul class="nav-links">
            <li> 
                <a href="#">
                    <i class='bx bx-grid-alt'></i>
                    <span class="link_name">Dashboard</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Examenes</a></li>
                </ul>
            </li>
            <li>
                <div class="iocn-link">
                    <a href="#">
                        <i class='bx bx-collection'></i>
                        <span class="link_name">Examenes</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a class="link_name" href="#">Examenes</a></li>
                    <li><a href="#">Tipo 1</a></li>
                    <li><a href="#">Tipo 2</a></li>
                    <li><a href="#">Tipo 3</a></li>
                </ul>
            </li>
            <li>
                <a href="#">
                    <i class='bx bx-pie-chart-alt-2'></i>
                    <span class="link_name">Analisis</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Analisis</a></li>
                </ul>
            </li>
            <li>
                <a href="#">
                    <i class='bx bx-line-chart'></i>
                    <span class="link_name">Citas</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Citas</a></li>
                </ul>
            </li>
            <li>
                <div class="iocn-link">
                    <a href="#">
                        <i class='bx bx-plug'></i>
                        <span class="link_name">Pacientes</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a class="link_name" href="#">Pacientes</a></li>
                    <li><a href="#">Pacientes</a></li>
                    <li><a href="#">Pacientes</a></li>
                    <li><a href="#">Pacientes</a></li>
                </ul>
            </li>
            <li>
                <a href="#">
                    <i class='bx bx-compass'></i>
                    <span class="link_name">Explorar</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Explorar</a></li>
                </ul>
            </li>
            <li>
                <a href="#">
                    <i class='bx bx-history'></i>
                    <span class="link_name">Historial</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Historial</a></li>
                </ul>
            </li>
            <li>
                <a href="#">
                    <i class='bx bx-cog'></i>
                    <span class="link_name">Configurar</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Configurar</a></li>
                </ul>
            </li>
        </ul>
    </div>

    <section class="home-section">
        <main role="main">
            @RenderBody()
        </main>
    </section>

    <!-- Footer fijo -->
    <footer class="footer">
        <p>© 2025 JMA LABS - Todos los derechos reservados.</p>
       
    </footer>

    <script src="~/js/Menu.js"></script>

</body>
</html>
